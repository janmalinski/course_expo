{
  "cli": {
    "version": ">= 3.9.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "development"
      },
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "preview"
      },
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "channel": "production"
    },
    "simulator-ios": {
      "withoutCredentials": true,
      "ios": {
        "simulator": true,
        "image": "latest"
      },
      "channel": "simulator-ios"
    },
    "emulator-android": {
      "withoutCredentials": true,
      "android": {
        "buildType": "apk",
        "image": "latest"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./AndroidServiceAccount.json",
        "track": "internal"
      }
    }
  }
}
